{
  "extends": "@snowpack/app-scripts-preact",
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      { "cmd": "tsc --noEmit", "watch": "$1 --watch" }
    ]
  ],
  "installOptions": {
    "installTypes": true
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
